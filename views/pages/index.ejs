<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head'); %>

    <body>
        <%- include('../partials/header'); %>

            <main id="option">
                <button class="previous">back</button>
                <button class="next"> next</button>
                <% if (restaurants.length) { %> 
                <figure id="images">
                    <!-- images worden main.js hierin gezet -->
                    <!-- main.js is toegevoegd aan ../partials/head -->
                    <!-- dummy plaatjes array beginnen bij [0] -->
                    <% restaurants[0].pictures.forEach(function(pic){ %>
                        <img src="<%= pic %>" draggable="false">
                    <% }) %>
                </figure>

                <section id="description">
                    <h1 class="name">
                        <a href="/restaurants/<%= restaurants[0].slug  %>">
                            <%= restaurants[0].name %>
                        </a>
                    </h1>
                    <span class="location">
                        <%= restaurants[0].location %>
                    </span>
                </section>
                <% } else { %> 
                    Nothing to see here folks!
                <% } %>
            </main>

            <%- include('../partials/footer'); %>
                <script src="/js/main.js"></script>
                <script src="/js/drag.js"></script>
    </body>

</html>